extends layout

block content
  form.form-horizontal(role='form', method='POST')
    input(type='hidden', name='_csrf', value=token)
    .form-group
      label(class='col-sm-2 control-label', for='name') 昵称
      .col-sm-8
        input.form-control(type='text', name='name', id='name', autofocus=true placeholder='小易')
    .form-group
      label(class='col-sm-2 control-label', for='email') 电子邮件
      .col-sm-8
        input.form-control(type='text', name='email', id='email' placeholder='foo@bar.com')
    .form-group
      label(class='col-sm-2 control-label', for='message') 正文
      .col-sm-8
        textarea.form-control(type='text', name='message', id='message', rows='7' placeholder='Hi，我觉得你们应该……')
    .form-group
      .col-sm-offset-2.col-sm-8
        button.btn.btn-default(type='submit')
          i.fa.fa-mail-forward
          | 发送
