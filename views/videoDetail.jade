extends layout

block content
  div.text-center
    legend= title
    div
      if req.useragent.isMobile
        iframe.video-detail(height=600 width=800 src=frameSrc frameborder=0 allowfullscreen)
      else
        embed.video-detail(allowFullScreen="true" quality="high" width="800" height="600" align="middle" allowScriptAccess="always" type="application/x-shockwave-flash" src=embedSrc bgcolor="#FFD173")

